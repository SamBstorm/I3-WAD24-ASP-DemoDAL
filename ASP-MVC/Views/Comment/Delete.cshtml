@model ASP_MVC.Models.Comment.CommentDelete

@{
    ViewData["Title"] = "Delete";
}

<h1>Êtes-vous sûr de vouloir supprimer ce commentaire concernant : @Model.Cocktail ?</h1>

<h3>Une fois supprimé, plus possibilité de récupérer ce commentaire.</h3>
<div>
    <div class="card">
        <div class="card-body">
            <p>@Html.DisplayNameFor(model => model.CreatedAt)@Html.DisplayFor(model => model.CreatedAt)</p>
            <h4 class="card-title">@Html.DisplayFor(model => model.Title)</h4>
            @if (Model.Note is not null)
            {
                <h6 class="card-subtitle">
                    @for (int i = 0; i < Model.Note; i++)
                    {
                        <span>⭐</span>
                    }
                </h6>
            }
            <p class="card-text">@Html.DisplayFor(model => model.Content)</p>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Revenir à la liste de vos commentaires</a>
    </form>
</div>
